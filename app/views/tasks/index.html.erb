<div class="container-fluid">
<h2>Listing tasks</h2>
<table>
  <tr>
    <th>Process executed</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Actions</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.name %>
      </td>
      <td>
        <%= task.started_at %>
      </td>
      <td>
        <%= task.ended_at %>
      </td>
      <td>
        <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %>
        <%= link_to 'Show', task %>
        <%= link_to 'Edit', edit_task_path(task) %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
</div>
<%= link_to 'New task', new_task_path %>
